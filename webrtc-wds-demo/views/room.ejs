<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Room</title>
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        background: black;
        color: white;
        padding: 1rem;
      }
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
        gap: 1rem;
      }
      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        outline: 3px solid white;
        border-radius: 3px;
      }
    </style>
    <script
      src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js"
      defer
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
  </head>
  <body>
    <h1>Room</h1>
    <div id="video-grid"></div>
    <script>
      const ROOM_ID = "<%= roomId %>";
      document.querySelector("h1").innerText = `Room ID: ${ROOM_ID}`;
    </script>
  </body>
</html>
